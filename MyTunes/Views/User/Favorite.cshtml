@model MyTunes.ViewModels.FavoriteSongsViewModel

@{
    ViewData["Title"] = "Favorite Songs";
}

<h2>@ViewData["Title"]</h2>

@if (Model.FavoriteSongs != null && Model.FavoriteSongs.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var song in Model.FavoriteSongs)
            {
                <tr>
                    <td>@song.Name</td>
                    <td>
                        <a asp-action="RemoveFromFavorites" asp-route-songId="@song.SongId">Remove from Favorites</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No favorite songs found.</p>
}
