@model IEnumerable<MyTunes.Models.Artist>

@{
    ViewData["Title"] = "Index";
}

<h1>Artists</h1>
@if(ViewData.ContainsKey("username") && ViewData["username"].ToString() == "admin") {
<p>
    <a asp-action="Create">Create New</a>
</p>
}
<table class="table"> 
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DebutDate)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DebutDate)
            </td>
            @if(ViewData.ContainsKey("username") && ViewData["username"].ToString() == "admin") {
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArtistId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ArtistId">Delete</a>
            </td>
            }
            <td>
                <a href="@Url.Action("Index", "Album", new { id = item.ArtistId })">View Albums</a>
            </td>
        </tr> 
}
    </tbody>
</table>
